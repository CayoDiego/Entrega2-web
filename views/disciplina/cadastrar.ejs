<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar</title>
    <%- include("../partials/header.ejs") %>
</head>

<body>

    <div class="container">

        <h1> Cadastrar </h1>

        <form style="margin-top: 5%;" action= "/disciplina" method="post">

            <input type="hidden" name="id" value="<%= disciplina.id %>">

            <div <%= escondido %>  class="mb-3">
                <label class="form-label">Disciplina</label>
                <input required type="text" value="<%= disciplina.disciplina %>" required class="form-control" name="disciplina">
            </div>

            <div class="mb-3">
                <label class="form-label">Nome</label>
                <input type="text" value="<%= disciplina.nome %>" required class="form-control" name="nome">
            </div>

            <div class="mb-3">
                <label class="form-label">Senha</label>
                <input type="password" value="<%= disciplina.senha %>" required class="form-control" name="senha">
            </div>

            <button type="submit" class="btn btn-success" >Salvar</button>
            <a class="btn btn-dark" href="/">Voltar</a>
        </form>

    </div>

</body>

<foot>
    <%- include("../partials/footer.ejs") %>
</foot>


</html>