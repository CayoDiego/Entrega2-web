<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listar</title>
    <%- include("../partials/header.ejs") %>
</head>

<body>
    
    <div class="container">

        <p style="font-size:40px;"> Cadastrados </p>

        <% if (salvo != undefined){ %>
            <div style="text-align:center; background-color:#008000; color:#ffffff">
                Vendedor cadastrado com sucesso!
            </div>
        <%}%>

        <% if (atualizado != undefined){ %>
            <div style="text-align:center; background-color:#ffd700; color:#ffffff">
                Dados atualizados com sucesso!
            </div>
        <%}%>

        <% if (removido != undefined){ %>
            <div style="text-align:center; background-color:brown; color:#ffffff">
                Vendedor removido com sucesso!
            </div>
        <%}%>


        <table class="table">

            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Idade</th>
                <th>Detalhar</th>
                <th>Alterar</th>
                <th>Deletar</th>
            </tr>

            <% for(let vendedor of listaVendedores) {  %>
                <tr>
                    <td>
                        <%= vendedor.codigo%>
                    </td>
                    <td>
                        <%= vendedor.nome%>
                    </td>
                    <td>
                        <%= vendedor.idade%>
                    </td>
                    <td>
                        <a class="btn btn-secondary" href="/vendedor/<%= vendedor.codigo %>">Detalhes</a>
                    </td>
                    <td>
                        <a class="btn btn-warning" href="/vendedor/cadastrar/<%= vendedor.codigo %>">Atualizar</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" onclick="return confirm('Confirmar remoção?')" href="/vendedor/remover/<%= vendedor.codigo %>">Remover</a>
                    </td>
                </tr>

            <% } %>

        </table>

        <div>
            <a class="btn btn-success" href="/vendedor/cadastrar">Cadastrar</a>
            <a class="btn btn-dark" href="/" >Voltar</a>
        </div>

    </div>

</body>

<foot>
    <%- include("../partials/footer.ejs") %>
</foot>

</html>