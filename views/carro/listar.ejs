<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listar Carros</title>
    <%- include("../partials/header.ejs") %>
</head>

<body>
    
    <div class="container">

        <p style="font-size:40px;"> Carros Cadastrados </p>

        <% if (salvo != undefined){ %>
            <div style="text-align:center; background-color:#008000; color:#ffffff">
                Carro cadastrado com sucesso!
            </div>
        <%}%>

        <% if (atualizado != undefined){ %>
            <div style="text-align:center; background-color:#ffd700; color:#ffffff">
                Dados atualizados com sucesso!
            </div>
        <%}%>

        <% if (removido != undefined){ %>
            <div style="text-align:center; background-color:#a52a2a; color:#ffffff">
                Carro removido com sucesso!
            </div>
        <%}%>


        <table class="table">

            <tr>
                <th>Placa</th>
                <th>Fabricante</th>
                <th>Cor</th>
                <th>Detalhar</th>
                <th>Alterar</th>
                <th>Deletar</th>
            </tr>

            <% for(let carro of listaCarros) {  %>
                <tr>
                    <td>
                        <%= carro.placa%>
                    </td>
                    <td>
                        <%= carro.fabricante%>
                    </td>
                    <td>
                        <%= carro.cor%>
                    </td>
                    <td>
                        <a class="btn btn-secondary" href="/carro/<%= carro.placa %>">Detalhes</a>
                    </td>
                    <td>
                        <a class="btn btn-warning" href="/carro/cadastrar/<%= carro.placa %>">Atualizar</a>
                    </td>
                    <td>    
                        <a class="btn btn-danger" onclick="return confirm('Confirmar remoção?')" href="/carro/remover/<%= carro.placa %>">Remover</a>
                    </td>
                </tr>

            <% } %>

        </table>

        <div>
            <a class="btn btn-success" href="/carro/cadastrar">Cadastrar</a>
            <a class="btn btn-dark" href="/" >Voltar</a>
        </div>

    </div>

</body>

<foot>
    <%- include("../partials/footer.ejs") %>
</foot>


</html>